pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "ashishbansal8383/my-mediawiki"
        DOCKER_TAG = "latest"
        DOCKER_CREDENTIALS_ID = "docker-hub-credentials" // This should be the ID of your Docker Hub credentials in Jenkins
        KUBE_NAMESPACE = "mediawiki"
        HELM_RELEASE_NAME = "mediawiki"
        HELM_CHART_PATH = "helm-chart-mediawiki/mediawiki-chart"
        HELM_MARIADB_CHART_PATH = "helm-chart-mediawiki/mediawiki-mariadb-chart"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", "Dockerfiles/mediwiki-1.41.1")
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }

        stage('Deploy MariaDB with Helm') {
            steps {
                script {
                    // Set up kubectl to use Minikube context
                    sh 'kubectl config use-context minikube'

                    // Create namespace if it doesn't exist
                    sh "kubectl create namespace ${KUBE_NAMESPACE} || true"

                    // Deploy MariaDB with Helm
                    sh """
                    helm upgrade --install mariadb ${HELM_MARIADB_CHART_PATH} \
                    --namespace ${KUBE_NAMESPACE}
                    """
                }
            }
        }

        stage('Deploy MediaWiki with Helm') {
            steps {
                script {
                    // Deploy MediaWiki with Helm
                    sh """
                    helm upgrade --install ${HELM_RELEASE_NAME} ${HELM_CHART_PATH} \
                    --namespace ${KUBE_NAMESPACE} \
                    --set image.repository=${DOCKER_IMAGE} \
                    --set image.tag=${DOCKER_TAG}
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    sh "kubectl rollout status deployment/${HELM_RELEASE_NAME} --namespace ${KUBE_NAMESPACE}"
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment succeeded!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
